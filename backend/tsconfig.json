{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "rootDir": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "noErrorTruncation": true,
    },
    "include": ["src/**/*.ts"]
  }
  
